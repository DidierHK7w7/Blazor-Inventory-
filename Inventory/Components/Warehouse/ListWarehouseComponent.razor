@using Entities
@using Business
@code {
    [Parameter]
    public string ToPage { get; set; }
    List<WarehouseEntity> warehouses = new List<WarehouseEntity>();

    protected override async Task OnInitializedAsync()
    {
        warehouses = B_Warehouse.WarehouseList();
    }

}

<h1 class="text-center"> Lista de bodegas</h1>

<p>Bodegas registradas: @warehouses.Count</p>

<div class="row">
    <div class="col-2">
	    <a href="category/create" type="button" class="btn btn-primary">Crear categoria</a>
    </div>
</div>

<table class="table table-hover">
	<thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Bodega</th>
          <th scope="col">Direccion</th>
          <th scope="col">Acciones</th>
        </tr>
    </thead>

    <tbody>
        @{
            int i = 1;
            foreach(var warehouse in warehouses){
                <tr>
                    <th scope="row">@i</th>
                    <td>@warehouse.WarehouseName</td>
                    <td>@warehouse.WarehouseAddress</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" href="" role="button">Editar</a>
                        <a class="btn btn-outline-danger btn-sm" role="button">Eliminar</a>
                    </td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>